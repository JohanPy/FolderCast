{
  "name": "foldercast",
  "version": "1.3.0",
  "description": "Nextcloud FolderCast Plugin",
  "main": "src/main.js",
  "scripts": {
    "build": "rm -rf js css && TARGET=main OUTDIR=dist-main vite build && TARGET=files OUTDIR=dist-files vite build && mkdir -p js css && cp -r dist-main/js/* js/ && cp -r dist-main/css/* css/ && cp -r dist-files/js/* js/ && cp -r dist-files/css/* css/ && rm -rf dist-main dist-files",
    "dev": "vite --mode development build",
    "watch": "vite --mode development build --watch",
    "lint": "eslint src"
  },
  "keywords": [
    "nextcloud",
    "podcast",
    "rss"
  ],
  "author": "JohanPy",
  "license": "AGPL-3.0-or-later",
  "dependencies": {
    "@nextcloud/axios": "^2.1.0",
    "@nextcloud/l10n": "^2.1.0",
    "@nextcloud/router": "^2.1.0",
    "@nextcloud/vue": "^7.0.0",
    "@nextcloud/auth": "^2.1.0",
    "vue": "^2.7.0"
  },
  "devDependencies": {
    "@nextcloud/vite-config": "^1.0.0",
    "vite": "^6.0.0",
    "vue-template-compiler": "^2.7.0",
    "typescript": "^5.0.0"
  }
}