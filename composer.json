{
	"name": "nextcloud/foldercast",
	"description": "FolderCast is a lightweight Nextcloud application designed to generate podcast RSS feeds directly from your file directories. It parses ID3 tags, handles recursive scanning, and provides a simple way to listen to your personal audio.\n\nKey Features:\n\n    üìÇ Folder-to-Feed mapping\n\n    üè∑Ô∏è Automatic metadata extraction (ID3)\n\n    ‚ö° Native Nextcloud integration (no external scripts)",
	"license": "AGPL-3.0-or-later",
	"authors": [
		{
			"name": "JohanPy",
			"email": "johandupond@gmail.com",
			"homepage": "https://github.com/JohanPy/NextcloudFolderCast/"
		}
	],
	"autoload": {
		"psr-4": {
			"OCA\\FolderCast\\": "lib/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@composer bin all install --ansi"
		],
		"post-update-cmd": [
			"@composer bin all install --ansi"
		],
		"lint": "find . -name \\*.php -not -path './vendor/*' -not -path './vendor-bin/*' -not -path './build/*' -print0 | xargs -0 -n1 php -l",
		"cs:check": "php-cs-fixer fix --dry-run --diff",
		"cs:fix": "php-cs-fixer fix",
		"psalm": "psalm --threads=1 --no-cache",
		"test:unit": "phpunit tests -c tests/phpunit.xml --colors=always --fail-on-warning --fail-on-risky",
		"openapi": "generate-spec",
		"rector": "rector && composer cs:fix"
	},
	"require": {
		"bamarni/composer-bin-plugin": "^1.8",
		"php": "^8.1",
		"james-heinrich/getid3": "^1.9"
	},
	"require-dev": {
		"nextcloud/ocp": "dev-stable30",
		"roave/security-advisories": "dev-latest"
	},
	"config": {
		"allow-plugins": {
			"bamarni/composer-bin-plugin": true
		},
		"optimize-autoloader": true,
		"sort-packages": true,
		"platform": {
			"php": "8.1"
		}
	}
}